<div class="content-wrapper mt-5">
	<div class="container-fluid mt-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="#">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Categories</li>
		</ol>

		<%- include('../../partials/adminMessages') %>
		<h3>Add Trainer Category</h3>
		<hr />
		<form method="POST" action="/admin/categories/create">
			<div class="form-group">
				<label for="exampleInputEmail1">Category Name</label>
				<input type="text" class="form-control" name="name" />
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
		</form>

		<div class="mt-5">
			<!-- <h2>Users</h2> -->

			<table class="table table-bordered text-center mt-4">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Name</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% categories.forEach(ctg => { %>
					<tr>
						<td><%= ctg.name %></td>
						<td class="d-inline-flex border">
							<a
								href="/admin/categories/edit/<%= ctg._id %>"
								class="btn btn-info btn-sm ml-5 mr-5"
								>Edit</a
							>
							<form
								action="/admin/categories/delete/<%= ctg._id %>?_method=DELETE"
								method="post"
							>
								<button type="submit" class="btn btn-danger btn-sm">
									Delete
								</button>
							</form>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>
