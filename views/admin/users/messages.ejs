<div class="content-wrapper mt-2">
	<div class="row mt-5">
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="#">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Manage Customer Queries</li>
			</ol>
		</div>

		<div class="col-lg-12">
			<%- include('../../partials/adminMessages') %>
			<h3>Customer Queries</h3>
			<hr />

			<% messages.forEach(msg => { %>
			<div class="card mt-4">
				<div class="card-header"><%= msg.title %> by <%= msg.user.name %></div>
				<div class="card-body"><%= msg.message %></div>
				<div class="card-footer">
					<span>User Email:</span>
					<a href="#" class="btn btn-primary"><%= msg.user.email %></a>
					<a class="btn btn-danger" href="/admin/delete/<%= msg.id %>"
						>Remove</a
					>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</div>
