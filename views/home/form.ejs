<link rel="stylesheet" href="/css/checkout.css" />

<script
	src="https://code.jquery.com/jquery-3.5.1.js"
	integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
	crossorigin="anonymous"
></script>
<script src="https://js.stripe.com/v3/"></script>

<div class="errors">
	<% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
	<div class="error">
		<%= error.message %>
	</div>
	<% }) %> <% } %>
</div>

<div class="container" style="margin-top: 5em;">
	<main>
		<div class="info">
			<h1>yoga online class membership</h1>
			<div class="annual">
				<h4
					class="anuual period"
					data-duration-value="199"
					style="background: black; color: white;"
				>
					Anuual <span data-duration-value="199">- $199 / year</span>
				</h4>
				<h4 class="monthly period" data-duration-value="19.99">
					Monthly
					<span data-duration-value="19.99">- $19.99 / month</span>
				</h4>
				<select name="" id="" class="sub">
					<option value="" hidden>Gift this subcription </option></select
				>

				<div class="subscriptions">
					<p data-amount="19.99">1-month subscription - $19.99</p>
					<p data-amount="199">1-year subscription - $199</p>
				</div>

				<div class="gift-info">
					<p>Gift this subcription</p>
					<p id="sub-info">1-month subscription for $19.99</p>
				</div>

				<div>
					<br /><br />
					<hr />
				</div>
				<br />
				<p class="text">
					<b>
						Access unlimited classes any time anywhere: no need to be tied down
						by a yoga schedule. By signing up, you'll receive:
					</b>
				</p>

				<br />
				<p class="text site-info">
					Powerful yoga practices to stay motivated, confident, strong, and
					happy. Taught by the best teachers in Miami at SY7 BODYBAR Unlimited
					access to all online classes on your phone, laptop, tablet or computer
					New practices every week. The best classes ranging from SY7 Flow, SY7
					Power Flow, HIIT training and more to come! <br /><br />
					<b>
						Follow us on Instagram at
						<a href="https://www.instagram.com/sun.yoga.7.body.bar/?hl=en"
							>@Sun.Yoga.7.Body.Bar.</a
						><br />
						and join our community!
					</b>
				</p>
				<a href="#" class="rm">Read More &#8675;</a>

				<a href="/yogaVideo" class="trailerBtn">
					Watch Trailer
				</a>
			</div>
		</div>

		<div class="payment">
			<h2 class="heading">Start your 7-day free trial</h2>
			<p class="account">
				Already have an account?<a
					href="/login"
					style="
						display: inline-block;
						background: none;
						color: blue;
						text-decoration: underline;
					"
					>Log in</a
				>
			</p>
			<br />
			<div>
				<form
					id="payment-form"
					autocomplete="on"
					method="POST"
					action="/signup/subscription"
				>
					<div class="subscription-fields">
						<input
							type="text"
							placeholder="Name"
							name="name"
							required
							value="<%= typeof name != 'undefined'? name: '' %>"
						/>
						<input
							type="email"
							name="email"
							placeholder="Email"
							required
							value="<%= typeof email != 'undefined'? email: '' %>"
						/>
						<input
							type="password"
							placeholder="Password"
							name="password"
							id="password"
							required
						/>
						<input
							type="password"
							placeholder="Confirm Password"
							name="confirmPassword"
							id="confirmPassword"
							style="display: none;"
							required
						/>

						<div class="terms">
							<input
								type="checkbox"
								class="css-checkbox regular-checkbox"
								id="tor"
								required
								checked
							/>
							<label for="tor" class="css-label">
								I agree to recieve newsletter and product updates</label
							>
						</div>
					</div>

					<div class="gift-fields">
						<input
							type="email"
							placeholder="Your email"
							name="client_email"
							required
							value="
							<%= typeof client_email != 'undefined' ? client_email : '' %>"
						/>
						<input
							type="text"
							name="recipient_name"
							placeholder="Recipient Name"
							value="<%= typeof recipient_name != 'undefined' ?recipient_name : '' %>"
							required
						/>
						<input
							type="email"
							name="recipient_email"
							placeholder="Recipient email"
							value="<%= typeof recipient_email != 'undefined' ?recipient_email : '' %>"
							required
						/>
						<input
							type="text"
							name="message"
							placeholder="Gift message"
							value="<%= typeof message != 'undefined' ? message : '' %>"
							required
						/>
					</div>

					<br />
					<br />
					<hr />
					<br />

					<h3 class="pd">Payment details</h3>

					<input type="hidden" name="duration" id="duration" value="199" />

					<input
						type="text"
						placeholder="Name on Card"
						name="username"
						required
						value="<%= typeof username != 'undefined'? username: '' %>"
					/>

					<div class="form-row">
						<input type="hidden" name="card" class="card" />

						<!-- <label for="card-element">
										Credit or debit card
									</label> -->
						<div id="card-element">
							<!-- A Stripe Element will be inserted here. -->
						</div>

						<!-- Used to display form errors. -->
						<div id="card-errors" role="alert"></div>
					</div>
					<br /><br /><br />
					<hr />
					<br />
					<div class="total">Total: <span class="totalValue">$199</span></div>
					<br />
					<p>
						After the trial period, your subscription will begin at $<span
							id="amount"
							>199</span
						>
						USD (plus any tax). Cancel in your account settings anytime before
						June 25, 2020 and you will not be charged. Thereafter, your
						subscription will automatically renew each
						<span id="period">year</span> until cancelled.
					</p>
					<br />
					<button type="submit" class="trailBtn" id="submitBtn">
						Start free trial
					</button>
					<br />
					<br />
					<p>
						By starting the free trial, you authorize us to charge your credit
						or debit card, agree to our Terms of Service, Cookies Policy, &
						Privacy Policy, and represent that you are at least 16 years of age.
						Charges on your card will appear as SunYoga7.
					</p>
					<br /><br /><br />
				</form>
			</div>
		</div>
	</main>

	<div class="loading">Loading&#8230;</div>
</div>

<script src="/js/subscriptions.js"></script>
