<div class="nav">
	<h1><a href="/"> logo | sy7 moves</a></h1>

	<% if (user != undefined) { %> <% if ( user.roles.includes('admin')) { %>
	<a href="/admin"><%= user.name.toUpperCase() %></a>
	<% } else { %>
	<a href="/manageAccount/<%= user.id %>"><%= user.name.toUpperCase() %></a>
	<% } %>
	<a href="/logout">LOG OUT</a>
	<% } else { %>
	<a href="/login">SIGN IN</a>
	<% } %>
</div>

<nav>
	<ul class="left">
		<li class="logo"><a href="/">logo | sy7 moves</a></li>
		<li><a href="/browse">browse</a></li>
		<li><a href="/search">search</a></li>
		<li><a href="/yogaTrainers">teaches</a></li>
		<li><a href="/styles">styles</a></li>
	</ul>

	<ul class="right">
		<% if (user != undefined) { %>
		<li class="account">
			<a href="#"><%= user.name %></a>
			<ul class="settings">
				<li style="border-bottom: 2px solid grey;">
					<a style="text-transform: none;" href="#"><%= user.email %></a>
				</li>
				<% if (user.roles.includes('admin')) { %>
				<li><a href="/admin">Admin Panel</a></li>
				<% } else { %>
				<li><a href="/manageAccount/<%= user.id %>">Manage Account</a></li>
				<li>
					<a href="/manageSubscription" id="manageSub">Manage Subscription</a>
				</li>
				<li><a href="/help">Help</a></li>
				<% } %>
				<li><a href="/logout">Logout</a></li>
			</ul>
		</li>
		<!-- <li><a href="/logout">Log Out</a></li> -->
		<% } else { %>
		<li><a href="/signup">start free trail</a></li>
		<li><a href="/login">sign in</a></li>
		<% } %>
	</ul>
</nav>

<script defer>
	const account = document.querySelector('.account a');
	if (account) {
		account.addEventListener('click', () => {
			const settings = document.querySelector('.settings');
			settings.style.display == 'block'
				? (settings.style.display = 'none')
				: (settings.style.display = 'block');
		});
	}
</script>
